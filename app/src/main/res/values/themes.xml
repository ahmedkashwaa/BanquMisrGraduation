<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BanquMisrGraduation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#faf4ee</item>
        <item name="colorPrimaryVariant">#faf4ee</item>
        <item name="colorOnPrimary">#faf4ee</item>
        <item name="badgeStyle">@style/CustomBadge</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#cf9775</item>
        <item name="fontFamily">@font/sen</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#faf4ee</item>
        <item name="colorPrimaryVariant">#faf4ee</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#faf4ee</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">#cf9775</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#cf9775</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogCustomm" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#cf9775</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#cf9775</item>
    </style>




</resources>